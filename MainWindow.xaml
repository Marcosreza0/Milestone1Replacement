<Window x:Class="Milestone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstboxMovie" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,275,331,0"/>
        <ListBox x:Name="lstboxDirector" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,656,222"/>
        <ListBox x:Name="lstboxGenre" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="164,1,527,225"/>
        <Button x:Name="btnOpen" Content="Open File" HorizontalAlignment="Left" Margin="400,25,0,0" VerticalAlignment="Top" Click="btnOpen_Click"/>
        <Button x:Name="JsonBtn" Content="JSON" HorizontalAlignment="Left" Margin="405,145,0,0" VerticalAlignment="Top" Click="JsonBtn_Click" Height="37" Width="59"/>
        <Button x:Name="CSV" Content="CSV" HorizontalAlignment="Left" Margin="619,149,0,0" VerticalAlignment="Top" Height="33" Width="67" Click="CSV_Click"/>

    </Grid>
</Window>
